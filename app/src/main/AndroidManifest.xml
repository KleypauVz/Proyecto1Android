<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sweetlab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sweet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sweet"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="SweetLab">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity"
            android:label="Chucherias seleccionadas"
            android:parentActivityName="com.example.android.sweetlab.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity">

            </meta-data>

        </activity>
    </application>

</manifest>